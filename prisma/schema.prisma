// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  wallet    String
  email     String
  name      String
  twitter   String
  discord   String
  posts     BlogPost[]

}

model BlogPost {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  ArticleType ArticleType
  text        String
  author      Member      @relation(fields: [id], references: [id])
  twitter     String
  discord     String

}

enum ArticleType {
  ARTICLE
  WIKI
  VIDEO
}
